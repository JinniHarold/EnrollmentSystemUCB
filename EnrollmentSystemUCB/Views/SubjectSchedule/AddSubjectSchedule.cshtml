@model EnrollmentSystemUCB.Models.AddSubjectViewModel

<style>
    .rounded-square {
        border: 2px solid #007bff; /* Border color */
        border-radius: 15px; /* Rounded corners */
        padding: 20px; /* Space inside the border */
        background-color: #f8f9fa; /* Light background color */
        max-width: 1500px; /* Optional: limit width */
        margin: auto; /* Center the form on the page */
    }
</style>

<form method="post" class="rounded-square">
    <div class="text-center">
        <h1 class="display-4">Welcome University of Cebu</h1>
        <h1 class="display-4">Edit Schedule</h1>
        @*Subject Code*@
        <div class="form-floating mb-sm-3">
            <input type="text" class="form-control" asp-for="SubjectCode" readonly>
            <label>Subject Code:</label>
        </div>
        @*Subject Description*@
        <div class="form-floating mb-sm-3">
            <input type="text" class="form-control" asp-for="SubjectDescription" readonly>
            <label>Subject Description:</label>
        </div>
    </div>
</form>