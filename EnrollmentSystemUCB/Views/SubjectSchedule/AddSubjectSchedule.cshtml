@model EnrollmentSystemUCB.Models.AddSubjectScheduleViewModel

<style>
    .rounded-square {
        border: 2px solid #007bff; /* Border color */
        border-radius: 15px; /* Rounded corners */
        padding: 20px; /* Space inside the border */
        background-color: #f8f9fa; /* Light background color */
        max-width: 1500px; /* Optional: limit width */
        margin: auto; /* Center the form on the page */
    }
</style>
<form method="post" class="rounded-square">
    <div class="text-center">
        <h1 class="display-4">Welcome University of Cebu</h1>
        <h1 class="display-4">Add Schedule</h1>
        <div class="row">
            <div class="col-md-6">
                <!-- Subject Code -->
                <div class="form-floating mb-sm-3">
                    <input type="text" class="form-control" asp-for="SubjectCode" readonly>
                    <label>Subject Code:</label>
                </div>
            </div>
            <div class="col-md-6">
                <!-- Subject Description -->
                <div class="form-floating mb-sm-3">
                    <input type="text" class="form-control" asp-for="SUbjectDescription" readonly>
                    <label>Subject Description:</label>
                </div>
            </div>
        </div>
        
        <!-- Subject EDP Code -->
        <div class="form-floating mb-sm-3">
            <input type="text" class="form-control" asp-for="SubjectEDPCode" required>
            <label>EDP Code:</label>
        </div>

        <!-- Subject Time Start -->
        <div class="form-floating mb-sm-3">
            <input type="time" class="form-control" asp-for="SubjectTimeStart" required>
            <label>Time Start:</label>
        </div>

        <!-- Subject Time End -->
        <div class="form-floating mb-sm-3">
            <input type="time" class="form-control" asp-for="SubjectTimeEnd" required>
            <label>Time End:</label>
        </div>

        <!-- Subject Days -->
        <div class="form-floating mb-sm-3">
            <input type="text" class="form-control" asp-for="SubjectDays" required>
            <label>Days (e.g., Mon, Wed, Fri):</label>
        </div>

        <!-- Subject Section -->
        <div class="form-floating mb-sm-3">
            <input type="text" class="form-control" asp-for="SubjectSection" required>
            <label>Section:</label>
        </div>

        <!-- Subject SY -->
        <div class="form-floating mb-sm-3">
            <input type="text" class="form-control" asp-for="SubjectSY" required>
            <label>School Year:</label>
        </div>

        <!-- Save Button -->
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>