@{
    Layout = "~/Views/Shared/_MinimalLayout.cshtml";
}

@model EnrollmentSystemUCB.Models.AddStudentViewModel

<!-- Include Bootstrap 5 CDN and custom styles -->
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to bottom left, #bbfaf7 30%, #b3fcf9 20%, #a1f7f4 50%);
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 50px;
        }
        h1 {
            color: #343a40;
            text-align: center;
            margin-bottom: 30px;
        }
        .card {
            border-radius: 10px;
            border: 1px solid #ddd;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }
        .header {
            background-color: #007bff;
            color: white;
            padding: 15px;
            font-size: 1.25rem;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }
        .card-body {
            padding: 30px;
        }
        .form-floating {
            margin-bottom: 15px;
        }
        .form-floating input,
        .form-floating select {
            border-radius: 8px;
            padding: 10px;
        }
        .form-floating label {
            font-size: 1.1rem;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            padding: 10px 20px;
            border-radius: 8px;
        }
        .btn-outline-secondary {
            border-radius: 8px;
            padding: 8px 12px;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
        .text-danger {
            font-size: 0.9rem;
        }
        .row.align-items-center {
            margin-bottom: 15px;
        }
    </style>
</head>

<form method="post">
    <div class="container">
        <h1>Student Entry</h1>

        <div class="card">
            <div class="header">
                <i class="fa fa-user-plus me-2"></i> Student Information
            </div>
            <div class="card-body">
                <div class="form-floating">
                    <input type="text" class="form-control" asp-for="StudFName" required>
                    <label for="floatingPassword">First Name:</label>
                    <span asp-validation-for="StudFName" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input type="text" class="form-control" asp-for="StudMInitial">
                    <label for="floatingPassword">Middle Name:</label>
                </div>

                <div class="form-floating">
                    <input type="text" class="form-control" asp-for="StudLName" required>
                    <label for="floatingPassword">Last Name:</label>
                    <span asp-validation-for="StudLName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="inputGroupSelect01" class="form-label">Course</label>
                    <select class="form-select" asp-for="StudCourse" id="inputGroupSelect01" required>
                        <option selected value="">Choose...</option>
                        <option value="BSIT">BSIT</option>
                        <option value="BSIS">BSIS</option>
                        <option value="ACT">ACT</option>
                    </select>
                    <span asp-validation-for="StudCourse" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input type="text" class="form-control" asp-for="StudYear" required>
                    <label for="floatingPassword">Year:</label>
                    <span asp-validation-for="StudYear" class="text-danger"></span>
                </div>

                <div class="form-floating row align-items-center">
                    <div class="col-md-3">
                        <label for="floatingPassword">Password:</label>
                    </div>
                    <div class="col-md-6">
                        <input type="password" class="form-control" asp-for="Password" id="floatingPassword">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <button type="button" class="btn btn-outline-secondary" onclick="togglePasswordVisibility()">
                            Show/Hide Password
                        </button>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Next</button>
            </div>
        </div>
    </div>
</form>

<script>
    function togglePasswordVisibility() {
        const passwordField = document.getElementById('floatingPassword');
        const fieldType = passwordField.getAttribute('type');
        passwordField.setAttribute('type', fieldType === 'password' ? 'text' : 'password');
    }
</script>
